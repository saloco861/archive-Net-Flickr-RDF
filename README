        <exif:gainControl>High gain up</exif:gainControl>
        <exif:flash>32</exif:flash>
        <exif:digitalZoomRatio>100/100</exif:digitalZoomRatio>
        <exif:pixelXDimension>1280</exif:pixelXDimension>
